<html lang='en' class='h-100'>

  <meta http-equiv='content-type' content='text/html;charset=UTF-8' />

  <head>
    <meta charset='utf-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width,initial-scale=1' />
    <title>پنل مدیریت | ورود</title>
    {{!--
    <meta http-equiv="Content-Security-Policy"
        content="default-src *; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval' http://www.google.com; object-src {{domainUrl}}/core/login/captcha">
    --}}

    <meta name='description' content='Some description for the page' />
    <!-- Favicon icon -->
    <link
      rel='icon'
      type='image/png'
      sizes='16x16'
      href='/theme/jobie/images/favicon.png'
    />
    <link href='/theme/jobie/css/style.css' rel='stylesheet' />

  </head>

  <body class='h-100'>
    <div class='authincation h-100'>
      <div class='container h-100'>
        <div class='row justify-content-center h-100 align-items-center'>
          <div class='col-md-6'>
            <div class='authincation-content'>
              <div class='row no-gutters'>
                <div class='col-xl-12'>
                  <div class='auth-form'>
                    <div class='text-center mb-3'>
                      <a href='/'><img
                          width='100'
                          height='100'
                          src='{{logo}}'
                          alt=''
                        /></a>
                    </div>
                    <h4 class='text-center mb-4 text-white'>ورود به حساب کاربری</h4>
                    <form action='/core/login' method='POST'>
                      <div class='form-group'>
                        <label class='mb-1 text-white'><strong>نام کاربری</strong></label>
                        <input
                          name='username'
                          type='text'
                          class='form-control'
                          placeholder='نام کاربری'
                        />
                      </div>
                      <div class='form-group'>
                        <label class='mb-1 text-white'><strong
                          >پسورد</strong></label>
                        <input
                          name='password'
                          type='password'
                          class='form-control'
                          placeholder='پسورد'
                        />
                      </div>

                      {{! captcha }}
                      {{! <div
                        class='form-row d-flex justify-content-between mt-4 mb-2'
                      >
                        <div
                          class='form-group d-flex justify-content-center align-items-center'
                        >
                          <input
                            name='captcha'
                            type='text'
                            class='form-control'
                            placeholder='کد امنیتی را وارد کنید'
                          />
                        </div>
                        
                        <div
                          class='form-group d-flex justify-content-center align-items-center'
                        >
                          <object
                            type='image/svg+xml'
                            id='captchaImage'
                            data='/core/login/captcha'
                            width='200'
                            height='57'
                            style='border: 1px solid black;background-color: lightgrey;'
                            class='justify-content-between'
                          ></object>
                          <i
                            id='refreshCaptcha'
                            class='lni lni-reload text-danger ml-2'
                          ></i>
                        </div>

                      </div> }}
                      <input type='hidden' name='_csrf' value='{{csrfToken}}' />
                      <div
                        class='form-row d-flex justify-content-between mt-2 mb-2'
                      >
                        <div class='form-group'>
                          <div
                            class='custom-control custom-checkbox ml-1 text-white'
                          >
                            <input
                              name='isRemember'
                              type='checkbox'
                              class='custom-control-input'
                              id='basic_checkbox_1'
                            />
                            <label
                              class='custom-control-label'
                              for='basic_checkbox_1'
                            >به خاطر سپردن</label>
                          </div>
                        </div>
                        {{! <div class="form-group">
                                                <a class="text-white" href="page-forgot-password.html">پسورد خود را
                                                    فراموش کرده اید ؟</a>
                                            </div> }}
                      </div>
                      <div class='text-center'>
                        <button
                          type='submit'
                          class='btn bg-white text-primary btn-block'
                        >ورود</button>
                      </div>
                    </form>
                    {{! <div class="new-account mt-3">
                                        <p class="text-white mb-0">حساب کاربری ندارید ؟ <a class="text-white"
                                                href="page-register.html">ثبت نام</a></p>
                                    </div> }}
                    {{#if errorMessage}}
                      <div
                        class='alert alert-danger alert-dismissible fade show'
                      >
                        <svg
                          viewBox='0 0 24 24'
                          width='24'
                          height='24'
                          stroke='currentColor'
                          stroke-width='2'
                          fill='none'
                          stroke-linecap='round'
                          stroke-linejoin='round'
                          class='mr-2'
                        >
                          <polygon
                            points='7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2'
                          >
                          </polygon>
                          <line x1='15' y1='9' x2='9' y2='15'></line>
                          <line x1='9' y1='9' x2='15' y2='15'></line>
                        </svg>
                        <strong>خطا !</strong>
                        {{errorMessage}}
                        <button
                          type='button'
                          class='close h-100'
                          data-dismiss='alert'
                          aria-label='Close'
                        ><span><i class='mdi mdi-close'></i></span>
                        </button>
                      </div>
                    {{/if}}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      src='/theme/jobie/vendor/global/global.min.js'
      type='text/javascript'
    ></script>
    <script
      src='/theme/jobie/vendor/bootstrap-datetimepicker/js/moment.js'
      type='text/javascript'
    ></script>
    <script
      src='/theme/jobie/vendor/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js'
      type='text/javascript'
    ></script>
    <script
      src='/theme/jobie/vendor/bootstrap-select/dist/js/bootstrap-select.min.js'
      type='text/javascript'
    ></script>
    <script src='/theme/jobie/js/custom.min.js' type='text/javascript'></script>
    <script src='/theme/jobie/js/deznav-init.js'></script>
    <script src='/theme/jobie/js/demo.js'></script>
    <script src='/src/core/login/index.js'></script>
    {{!
    <script src="/theme/jobie/js/styleswitcher.js"></script> }}
  </body>

</html>
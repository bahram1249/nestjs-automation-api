            <h2 class='head'>جست و جوی سریع</h2>
            <div class='form-control'>
              <label for='for'>لوکیشن</label>
              <div class='input'>
                <i class='icon-location right'></i>
                <select name='location' id='location'>
                  <option value='1'>سهروردی</option>
                  <option value='2'>شهر آرا</option>
                  <option value='3'>ستارخان</option>
                  <option value='4'>رودکی</option>
                  <option value='5'>حسن آباد</option>
                </select>

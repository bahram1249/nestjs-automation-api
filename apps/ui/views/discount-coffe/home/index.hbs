              <label for='for'>لوکیشن</label>
              <div class='radios'>
                <div class='radioItem active'>
                  <label for='cafes'>کافه ها</label>
                  <input
                    id='cafes'
                    name='type'
                    checked
                    type='radio'
                    value='1'
                  />
                </div>
                <div class='radioItem'>
                  <label for='restaurant'>کافه ها</label>
                  <input id='restaurant' name='type' type='radio' value='2' />

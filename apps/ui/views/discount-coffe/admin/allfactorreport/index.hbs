{{#section 'header'}}
  <meta name='keywords' content='' />
  <meta name='author' content='' />
  <meta name='robots' content='' />
  <meta name='description' content='{{model.title}}' />
  <meta property='og:title' content='{{model.title}}' />
  <meta property='og:description' content='{{model.title}}' />
  <meta property='og:image' />

  <title>{{title}}</title>

  <link
    href='https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css'
    rel='stylesheet'
  />

{{/section}}

<div class='card'>
  <div class='card-header'>
    <h4>صورت حساب ها</h4>
  </div>
  <div id='mainSection' class='card-body'>

    <div class='row'>
      <div class='form-group col-sm-6 col-xl-6'>
        <label>نام کافه رستوران</label>
        <select
          id='buffetSelect'
          name='buffetId'
          class='form-control default-select form-control-lg dir-rtl'
        >
          {{#each buffets}}

            <option value='{{id}}'>{{title}}</option>

          {{/each}}
        </select>

      </div>
      <div class='form-group col-sm-6 col-xl-6'>
        <button id='showReport' class='btn btn-primary mt-4'>مشاهده</button>
      </div>
    </div>

    <table id='allFactorReport' class='table table-striped'>
      <thead>
        <tr>
          <th>شناسه کافه</th>
          <th>نام</th>
          <th>سال</th>
          <th>نام ماه</th>
          <th>تعداد کل سفارش</th>
          <th>تعداد کل سفارش آنلاین</th>
          <th>تعداد سفارش آنلاین اسکن شده</th>
          <th>تعداد کل سفارش آفلاین</th>
          <th>تعداد سفارش آفلاین اسکن شده</th>
          <th>مبلغ سفارش آنلاین</th>
          <th>مبلغ سفارش آنلاین اسکن شده</th>
          <th>مبلغ سفارش آفلاین</th>
          <th>مبلغ سفارش آفلاین اسکن شده</th>
        </tr>
      </thead>
      <tbody>
        {{#each reports}}
          <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{YearNumber}}</td>
            <td>{{PersianMonthName}}</td>
            <td>{{totalCnt}}</td>
            <td>{{onlineCnt}}</td>
            <td>{{onlineScanCnt}}</td>
            <td>{{offlineCnt}}</td>
            <td>{{offlineScanCnt}}</td>
            <td>{{onlineSumPrice}}</td>
            <td>{{onlineSumPriceScaned}}</td>
            <td>{{offlineSumPrice}}</td>
            <td>{{offlineSumPriceScaned}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</div>

{{#section 'footer'}}

  <script
    src='https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js'
  ></script>

  <script
    src='/src/discountcoffe/allcoffereport/allcoffereport.js'
    type='text/javascript'
  ></script>

{{/section}}
  />

  <link
    rel='stylesheet'
    href='https://behzadi.github.io/persianDatepicker/css/persianDatepicker-latoja.css'
  />
  <style>

    .pdp-default { position: relative; direction: rtl; color: #555; z-index:
    99999; top: unset !important; border-radius: 25px !important; left: unset
    !important } .pdp-default ::-webkit-scrollbar-track { -webkit-box-shadow:
    inset 0 0 6px rgba(0,0,0,0.3); background-color: #f5f5f5 } .pdp-default
    ::-webkit-scrollbar { width: 15px; background-color: #f5f5f5 } .pdp-default
    ::-webkit-scrollbar-thumb { background-color: #444 } .pdp-default
    ::-moz-selection { color: #67cdcc } .pdp-default ::selection { color:
    #67cdcc } .pdp-default .pdp-header { background-color: transparent;
    border-bottom: 0; font-weight: bold; padding: 15px } .pdp-default
    .yearSelect { overflow-y: auto; direction: ltr } .pdp-default .monthSelect
    li.disableMonth,.pdp-default .monthSelect li.disableMonth:hover { color:
    #bbb; background: #eee; cursor: not-allowed } .pdp-default
    .yearSelect,.pdp-default .monthSelect { font: normal 12px; background:
    #f9f9f9; border: 1px solid #ccc; list-style: none; position: absolute;
    padding: 0; width: 99.6%; text-align: center; z-index: 9999; animation:
    start .2s; -webkit-animation: start .2s } .pdp-default .selected {
    background: #15a6eb; color: #fff } .pdp-default .yearSelect li,.pdp-default
    .monthSelect li { padding: 1px; cursor: default; display: inline-table;
    text-align: center; border: 1px dotted #ddd } .pdp-default .yearSelect
    li:hover,.pdp-default .monthSelect li:hover { background: #f93; color: #fff;
    border-color: #f70 } .pdp-default .nextArrow { right: 35px } .pdp-default
    .prevArrow { left: 35px } .pdp-default .monthYear { width: 80%; margin: 0
    auto; text-align: center; cursor: pointer } .pdp-default
    .nextArrow,.pdp-default .prevArrow { cursor: pointer; position: absolute;
    top: 15px; padding: 2px } .pdp-default .nextArrow:hover,.pdp-default
    .prevArrow:hover { color: #0073ea } .pdp-default .cell { display:
    inline-block; cursor: default; text-align: center } .pdp-default .dows {
    background: transparent; color: #000; text-align: center; margin: 2em 0 0 }
    .pdp-default .days { background-color: #fff; border-top: 0; text-align:
    center; padding: 41px 0 } .pdp-default .day { border: 0; margin: 2px;
    background: #fff; border-radius: 13px; -webkit-box-shadow: 0 0 3px
    #0000004a; box-shadow: 0 0 3px #0000004a } .pdp-default .day:hover { border:
    0; margin: 2px; background: #4d7eff; border-radius: 13px; color: #fff;
    -webkit-box-shadow: 0 0 3px #0000004a; box-shadow: 0 0 3px #0000004a }
    .pdp-default .selday,.pdp-default .selday:hover { background: #4d7eff;
    color: #fff } .pdp-default .friday { background: red; color: #fff }
    .pdp-default .disday,.pdp-default .disday:hover { color: #b7b5b5;
    background: #f1f1f1; cursor: not-allowed } .pdp-default .nul { border: 1px
    solid #f1f1f1; background: #f1f1f1; margin: 2px; border-radius: 11px }
    .pdp-default .pdp-footer { background: transparent; text-align: right;
    height: 17px; line-height: 0 !important } .pdp-default .pdp-footer .goToday
    { color: #f0f0f0; text-decoration: none; margin-right: 31px; color: #4d7eff
    } .pdp-default .pdp-footer .goToday:hover { color: #f0f0f0; text-decoration:
    none; margin-right: 31px; color: #4d7eff } #shower { position: relative;
    border-radius: 15px; background: #fff; padding: 38px 0 0;
    -webkit-box-shadow: 0 6px 57px 0 rgba(0,0,0,0.25); box-shadow: 0 6px 57px 0
    rgba(0,0,0,0.25) } #shower h4 { text-align: center; font-size: 38px;
    margin-bottom: 1em } .day.cell.today { background-color: transparent
    !important; color: #4d7eff; border: 1px solid #4d7eff } div#date-picker {
    visibility: hidden; height: 0 }

  </style>
  <style>
    .icon-left:before{content:"\eb55";font-family:'lineicons'}
    .icon-right:before{content:"\eb56";font-family:'lineicons'}
  </style>
{{/section}}

<div class='card'>
  <div class='card-header'>
    <h4>نمایش تعطیلات</h4>
  </div>
  <div id='mainSection' class='card-body'>
    <div class='text-left'>
      <button id='onAddClick' class='btn btn-success'><i
          class='flaticon-381-add'
        ></i>
        اضافه کردن</button>
    </div>

    <table
      id='entityTable'
      class='table table-striped'
      data-sticky-header='true'
      data-ajax='getEntityAjaxRequest'
      data-side-pagination='server'
      data-pagination='true'
      data-page-list='[10, 20, 50, 100, 200]'
      data-locale='fa-IR'
      data-search='true'
    >
      <thead>
        <tr>
          <th data-field='id'>شناسه</th>
          <th data-field='buffet.title'>نام کافه</th>
          <th data-formatter='persianDateFormatter'>تاریخ تعطیلی کافه</th>
          <th data-formatter='actionFormatter'>عملیات</th>

        </tr>
      </thead>

    </table>
  </div>
  <div class='card-header'>
    <div class='text-left'>
      <button
        id='backButton'
        class='btn btn-secondary'
        style='display: none;'
      >بازگشت</button>
    </div>
  </div>
  <div id='secondSection' class='card-body' style='display: none;'></div>

</div>

{{#section 'footer'}}

  <script
    src='/tools/core/bootstrap-table@1.19.1/bootstrap-table.min.js'
